	<bean id="ramIndexer4_1" class="com.tudou.isearch.indexer.RAMIndexer4"
		init-method="init">
		<property name="analyzer" ref="analyzer" />
		<property name="segmentPath" value="/tmp/isearch/ramIndexer4_1_1" />
		<!-- <property name="ramThreshold" value="4194304" /> 4MB-->
		<!-- <property name="ramThreshold" value="104857600" />--><!-- 1MB=1048576  -->
		<property name="ramThreshold" value="1" /><!-- 1MB=1048576  262144 3000 -->
		<property name="deleteQueue" ref="deleteQueue3_1" />
		<property name="assembledDeleteQueue" ref="assembledDeleteQueue" />
		<property name="modelQueue" ref="simpleQueue"/>
		<property name="manager" ref="indexerManager" />
	</bean>

	<bean id="indexerManager" class="com.tudou.isearch.indexer.IndexerManager3"
		init-method="init">
		<property name="assembledIndexPath" value="/tmp/isearch/assembled"/>
		<property name="analyzer" ref="analyzer" />
		<property name="assembledDeleteQueue" ref="assembledDeleteQueue" />
		<property name="indexerPool" ref="indexerPool" />
		<property name="ramIndexers">
			<list>
				<ref local="ramIndexer4_1" />
			</list>
		</property>
	</bean>

	<bean id="indexerPool"
		class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor" />
