				<ref bean="autoIndexerCommitTrigger" />
			</list>
		</property>
	</bean>
	<bean id="autoIndexerCommitTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="autoIndexerCommitScheduler"></property>
		<property name="cronExpression" value="0 0/1 * * * ?"></property>
	</bean>
	<bean id="autoIndexerCommitScheduler"
